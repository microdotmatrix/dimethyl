{% extends "partials/base.html.twig" %}

{% block javascripts %}
   {{ parent() }}
   {% do assets.addJs('theme://js/plugins/jarallax/jarallax.min.js', {'priority':90, 'group':'bottom'}) %}
   {% do assets.addJs('theme://js/plugins/jarallax/jarallax-video.min.js', {'priority':88, 'group':'bottom'}) %}
   {% do assets.addJs('theme://js/plugins/activate-power-mode.js', {'priority':86, 'group':'bottom'}) %}
{% endblock %}

